<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.petrobras.forumtecnico201712" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Forum Tecnico 201712</name>
    <description>
        Aplicação para forum tecnico 2017/12 CPSOL
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.2.1" />
    <engine name="android" spec="^5.2.2" />
    <plugin name="kapsel-plugin-logon" spec="~3.14.16" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="kapsel-plugin-logger" spec="~3.14.16" />
    <plugin name="kapsel-plugin-push" spec="~3.14.16" />
</widget>
